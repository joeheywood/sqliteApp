library(shiny)
library(RSQLite)
db <- dbConnect(SQLite(), "tud2.sqlite")

# Define server logic required to draw a histogram
shinyServer(function(input, output) {
    output$tables <- renderText({
        paste(dbListTables(db), sep=" | ")
    })

    output$fields <- renderText({
        if(input$isCtrl == TRUE & input$lastkey == 16) {
            tbls <- dbListTables(db)
            if(input$sqlEdit %in% tbls) {
                paste(dbListFields(db, input$sqlEdit), sep=" | ")
            } else {
                input$lastkey
            }
        } else {
            paste0(input$lastKey, " - ", input$isCtrl)
        }
    })

    #output$msg <- renderText({input$isCtrl})

    output$res <- renderDataTable({
        if(input$isCtrl == TRUE & input$lastkey == 13) {
            sql <- input$sqlEdit
            dbGetQuery(db, sql)
        } else {
            data.frame(a = 1, b = 2)
        }
        data.frame()
    })
})
